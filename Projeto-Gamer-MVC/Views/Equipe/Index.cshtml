@model Equipe

@{
    ViewData["Title"] = "Equipe";
}

<link rel="stylesheet" href="~/css/equipes.css">

<!-- MAIN -->
<main>

    <section class="container-grid cadastro-equipes">

        @if (ViewBag.UserName == null)
        {
            <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Index">Login</a>
        }
        else
        {
            <form class="frm-cad-equipe" method="post" action='@Url.Action("Cadastrar")' enctype="multipart/form-data">
                <div class="cadequipe-titulo">
                    <h1>Cadastro de Equipes</h1>
                    <hr>
                </div>

                @* <input class="campo-entrada" type="number" id="idEquipe" placeholder="Digite o Id da sua equipe:"> *@
                <input class="campo-entrada" type="text" name="Nome" required placeholder="Digite o nome da sua equipe:">
                <label class="foto" for="foto-file">
                    Nenuma imagem selecionada...
                    <input type="file" id="foto-file">
                </label>

                <button>Cadastro</button>



                <!-- <select class="equipeid" id="equipeid">
                                                            <option value="">Selecione uma Equipe</option>
                                                            <option value="x">Equipe X</option>
                                                            <option value="y">Equipe Y</option>
                                                        </select> -->
            </form>

            <!-- TABELA CADASTRO DE EQUIPES -->

            <table>
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nome</th>
                        <th>Foto</th>
                        <th>&spades;</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Equipe equipe in ViewBag.Equipe)
                    {
                        <tr>
                            <td>@equipe.IdEquipe</td>
                            <td>@equipe.Nome</td>
                            <td><img src="/img/equipes/@equipe.Imagem" alt="Imagem da Equipe @equipe.Nome" width="50px"></td>
                            <td>
                                <a asp-area="" asp-controller="Equipe" asp-action="Excluir"
                                    asp-route-id="@equipe.IdEquipe">Excluir</a>
                            </td>
                            <td>
                                <a asp-area="" asp-controller="Equipe" asp-action="Editar"
                                    asp-route-id="@equipe.IdEquipe">Editar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }


    </section>
</main>


















<h1>Tela de Equipes</h1>

@if (ViewBag.UserName == null)
{
    <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Index">Login</a>
}
else
{
    <form method="post" action='@Url.Action("Cadastrar")' enctype="multipart/form-data">

        <label for="">Nome</label>
        <input type="text" name="Nome">

        <label for="">Imagem</label>
        <input type="file" name="Imagem">

        <button type="submit">Cadastrar</button>

    </form>

    <table class="table table-striped table-responsive table-dark">
        <thead>
            <th>Id</th>
            <th>Nome</th>
            <th>Imagem</th>
            <th>Ações</th>
        </thead>

        <tbody>

            @foreach (Equipe equipe in ViewBag.Equipe)
            {
                <tr>
                    <td>@equipe.IdEquipe</td>
                    <td>@equipe.Nome</td>
                    <td><img src="/img/equipes/@equipe.Imagem" alt="Imagem da Equipe @equipe.Nome" width="50px"></td>
                    <td>
                        <a asp-area="" asp-controller="Equipe" asp-action="Excluir" asp-route-id="@equipe.IdEquipe">Excluir</a>
                    </td>
                    <td>
                        <a asp-area="" asp-controller="Equipe" asp-action="Editar" asp-route-id="@equipe.IdEquipe">Editar</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
}
