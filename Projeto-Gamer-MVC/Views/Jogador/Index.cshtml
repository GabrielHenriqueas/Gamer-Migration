@model Jogador

@{
    ViewData["Title"] = "Jogador";
}

<link rel="stylesheet" href="~/jogadores.css">
 
<!-- MAIN -->
<main>

    <section class="container-grid cadastro-equipes">


        <form action="" class="frm-cad-equipe">
            <div class="cadequipe-titulo">
                <h1>Cadastro de Jogadores</h1>
                <hr>
            </div>

            <input class="campo-entrada" type="number" id="id-equipe" placeholder="Digite o Id da sua equipe:">
            <input class="campo-entrada" type="text" id="nome-equipe" placeholder="Digite o nome da sua equipe:">

            <select class="campo-entrada" id="equipe-select">
                <option value="">Selecione uma Equipe</option>
                <option value="x">Equipe X</option>
                <option value="y">Equipe Y</option>
            </select>

            <input class="campo-entrada" type="text" id="nome-jogador" placeholder="Digite o nome do Jogador:">
            <input class="campo-entrada" type="email" id="email-jogador" placeholder="Digite o Email do Jogador:">
            <input class="campo-entrada" type="password" id="senha" placeholder="Digite a Senha:">
            <button>Cadastrar</button>




        </form>

        <!-- TABELA CADASTRO DE EQUIPES -->

        <table>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>&spades;</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>Eduardo</td\>
                    <td>eduardo@gmail.com</td>
                    <td><img class="yellow-trash" src="~/assets/trash.png" alt=""></td>
                </tr>
                <tr>
                    <td>1</td>
                    <td>Eduardo</td>
                    <td>eduardo@gmail.com</td>
                    <td><img class="yellow-trash" src="~/assets/trash.png" alt=""></td>
                </tr>
                <tr>
                    <td>1</td>
                    <td>Eduardo</td>
                    <td>eduardo@gmail.com</td>
                    <td><img class="yellow-trash" src="~/assets/trash.png" alt=""></td>
                </tr>
            </tbody>
        </table>
    </section>
</main>

<h1>Tela de Jogadores</h1>

@if (ViewBag.UserName == null)
{
    <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Index">Login</a>
}
else
{
    <form method="post" action='@Url.Action("Cadastrar")' enctype="multipart/form-data">

        <label for="">Nome</label>
        <input type="text" name="Nome">

        <label for="">E-mail</label>
        <input type="email" name="Email">

        <label for="">Senha</label>
        <input type="password" name="Senha">

        <label for="">Equipe</label>
        <select name="IdEquipe" id="IdEquipe">
            <option value="0">Selecione uma opção</option>

            @foreach (Equipe equipe in ViewBag.Equipe)
            {
                <option value="@equipe.IdEquipe">@equipe.Nome</option>
            }

        </select>

        <button type="submit">Cadastrar</button>


    </form>

    <table class="table table-striped table-responsive table-dark">
        <thead>
            <th>Id</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Equipe</th>
        </thead>

        <tbody>

            @foreach (Jogador jogador in ViewBag.Jogador)
            {
                <tr>
                    <td>@jogador.IdEquipe</td>
                    <td>@jogador.Nome</td>
                    <td>@jogador.Email</td>
                    <td><img src="/img/equipes/@jogador.Equipe.Imagem" alt="Imagem da Equipe @jogador.Nome" width="50px"></td>
                    <td>
                        <a asp-area="" asp-controller="Jogador" asp-action="Excluir"
                            asp-route-id="@jogador.IdJogador">Excluir</a>
                    </td>
                    <td>
                        <a asp-area="" asp-controller="Jogador" asp-action="Editar" asp-route-id="@jogador.IdJogador">Editar</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
}

