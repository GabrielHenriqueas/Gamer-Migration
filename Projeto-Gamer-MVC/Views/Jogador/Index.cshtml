@model Jogador

@{
    ViewData["Title"] = "Jogador";
}

<link rel="stylesheet" href="~/css/jogadores.css">

<!-- MAIN -->
<main>

    <section class="container-grid cadastro-equipes">

        @if (ViewBag.UserName == null)
        {
            <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Index">Login</a>
        }
        else
        {
            <form class="frm-cad-equipe" method="post" action='@Url.Action("Cadastrar")'>
                <div class="cadequipe-titulo">
                    <h1>Cadastro de Jogadores</h1>
                    <hr>
                </div>

                <select class="campo-entrada" name="IdEquipe" id="IdEquipe">
                    <option value="0">Selecione uma opção</option>

                    @foreach (Equipe equipe in ViewBag.Equipe)
                    {
                        <option value="@equipe.IdEquipe">@equipe.Nome</option>
                    }

                </select>

                <input class="campo-entrada" type="text" id="nome-jogador" name="Nome"
                    placeholder="Digite o nome do Jogador:">

                <input class="campo-entrada" type="email" id="email-jogador" name="Email"
                    placeholder="Digite o Email do Jogador:">

                <input class="campo-entrada" type="password" id="senha" name="Seha" placeholder="Digite a Senha:">

                <button type="submit">Cadastrar</button>
            </form>

            <!-- TABELA CADASTRO DE EQUIPES -->
            <table>
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nome</th>
                        <th>Email</th>
                        <th>Equipe</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Jogador jogador in ViewBag.Jogador)
                    {
                        <tr>
                            <td>@jogador.IdEquipe</td>
                            <td>@jogador.Nome</td>
                            <td>@jogador.Email</td>
                            <td><img src="/img/equipes/@jogador.Equipe.Imagem" alt="Imagem da Equipe @jogador.Nome"
                                    width="50px"></td>
                            <td style="gap: 10px;">
                                <a asp-area="" asp-controller="Jogador" asp-action="Excluir"
                                    asp-route-id="@jogador.IdJogador"><img src="~/assets/trash.png" alt="Excluir"></a>

                                <a asp-area="" asp-controller="Jogador" asp-action="Editar"
                                    asp-route-id="@jogador.IdJogador"><img src="~/assets/editar.png" alt="Editar" width="30px"></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </section>
</main>

